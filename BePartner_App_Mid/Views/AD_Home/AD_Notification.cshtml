<!-- new Entrepreneurs section start -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex sa_align-items-center mb-4 justify-content-between ">
        <h6 class="m-0 font-weight-bold text-primary">New Enterpreneurs</h6>

        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Download
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>NID</th>
                    <th>Occupation</th>
                    <th>Gender</th>
                    <th>Address</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var EN in ViewBag.M_ENS)
                {
                    <tr>
                        <td>@EN.FirstName</td>
                        <td>@EN.LastName</td>
                        <td>@EN.En_Email</td>
                        <td>@EN.Phone</td>
                        <td>@EN.Nid</td>
                        <td>@EN.Occupation</td>
                        <td>@EN.Gender</td>
                        <td>@EN.Address</td>
                    </tr>
                }
            </tbody>
        </div>
    </div>
</div>

<!-- new Entrepreneurs section End -->
